- if coach_signed_in?
  %h1 New district

  = form_for @district do |f|
    - if @district.errors.any?
      #error_explanation
        %h2= "#{pluralize(@district.errors.count, "error")} prohibited this pitch from being saved:"
        %ul
          - @district.errors.full_messages.each do |msg|
            %li= msg

    .field
      = f.label :name
      = f.text_field :name
    .actions
      = f.submit 'Save'


  = link_to 'Back', districts_path
