= form_for @team do |f|
  - if @team.errors.any?
    #error_explanation
      %h2= "#{pluralize(@team.errors.count, "error")} prohibited this team from being saved:"
      %ul
        - @team.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :coach_id
    = f.number_field :coach_id
  .field
    = f.label :age
    = f.number_field :age
  .field
    = f.label :district_id
    = f.number_field :district_id
  .actions
    = f.submit 'Save'
