- if coach_signed_in?
  %h1 New pitch

  = form_for @pitch do |f|
    - if @pitch.errors.any?
      #error_explanation
        %h2= "#{pluralize(@pitch.errors.count, "error")} prohibited this pitch from being saved:"
        %ul
          - @pitch.errors.full_messages.each do |msg|
            %li= msg

    .field
      = f.label :name
      = f.text_field :name
    .field
      = f.label :coach_id
      = f.number_field :coach_id
    .actions
      = f.submit 'Save'


  = link_to 'Back', pitches_path
