- if coach_signed_in?
  %h1 Listing pitches

  %table.table-responsive
    %tr
      %th Adres
      %th

    - @pitches.each do |pitch|
      %tr
        %td= pitch.address
        %td= pitch.players.map {|k| k.email}.join(', ')
        %td= link_to 'Show', pitch
        %td= link_to 'Edit', edit_pitch_path(pitch)
        %td= link_to 'Destroy', pitch, :method => :delete, :data => { :confirm => 'Are you sure?' }

  %br

  = link_to 'New Pitch', new_pitch_path
